<%@page contentType="text/html" pageEncoding="UTF-8" %><%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %><%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %><!DOCTYPE html><html lang="en"><head>	<meta charset="UTF-8">	<title>大順 - 活动平台</title>	<link rel="stylesheet" href="<c:url value='/res/home/css/wk-activity.css?ver=${VIEW_VERSION}'/>"/>	<link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">	<script type="text/javascript" src="<c:url value='/res/home/js/checkinCalendar.js?ver=${VIEW_VERSION}'/>"></script>	<script type="text/javascript" src="<c:url value='/res/home/js/activity/index.js?ver=${VIEW_VERSION}'/>"></script></head><body><div class="main">	<i class="line"></i>	<h1><i class="circle"></i>活动中心</h1>	<ul class="activityList">		<c:forEach items="${list}" var="a" varStatus="status">			<c:choose>				<c:when test="${a.activityType!='sign'}">					<li class="li_${a.activityType}">						<i class="circle"></i>						<i class="arrow"></i>						<span class="time"><fmt:formatDate value="${a.beginTime}" pattern="yyyy-MM-dd"/></span>						<div class="banner">							<img src="${a.icon}"/>							<a href="javascript:;" class="upDown"><i></i>展开</a>						</div>						<div class="content" style="display:none;">							<div class="contentDiv">									${a.remark}							</div>							<div class="activityNoticeBtn" id="activityNoticeBtn">								<c:if test="${a.needAttend==1}">									<a href="javascript:;" onclick="add('${a.activityType}')"									   class="btn joinActivity" id="joinActivity">参加活动</a>								</c:if>								<c:if test="${a.needPrize==1}">									<a href="javascript:;" onclick="bonus('${a.activityType}')"									   class="btn getPrize" id="getPrize">申请奖金</a>								</c:if>							</div>						</div>					</li>				</c:when>				<c:otherwise>					<li class="li_${a.activityType}">						<i class="circle"></i>						<i class="arrow"></i>						<span class="time"><fmt:formatDate value="${a.beginTime}" pattern="yyyy-MM-dd"/></span>						<div class="banner">							<img src="${a.icon}"/>							<a href="javascript:;" class="upDown"><i></i>展开</a>						</div>						<div class="content" style="display:none;">							<div class="contentDiv">									${a.remark}							</div>							<div class="signBox">								<h3>|&nbsp;签到详情标准</h3>								<div class="tableBox">									<p class="tableTitle">已连续签到<span id=signDays>0</span>天</p>									<table>										<thead>										<tr>											<th width="45%">投注金额</th>											<th width="30%">签到礼金</th>											<th>领取状态</th>										</tr>										</thead>										<tbody>										<c:forEach items="${signActivity.daysList}" var="sign">											<tr class="getRewardDetail">												<td>第${sign.days}天消费${sign.betAmount}元</td>												<td><i class="gold"></i>${sign.giveAmount}元</td>												<td><a href="javascript:;" class="btn"></a></td>											</tr>										</c:forEach>										</tbody>									</table>								</div>							</div>						</div>					</li>				</c:otherwise>			</c:choose>		</c:forEach>	</ul></div></body></html>